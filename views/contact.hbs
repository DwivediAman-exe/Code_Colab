<h1 class="text-center contact">Contact</h1>

<form class="col-md-6 col-md-offset-3 form-contact" method="POST">

	{{#if errorMessages}}
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>OOPs! </strong> Please enter valid details.
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	{{/if}}


	<div class="form-group ">
		<label>Name</label>
			<input type="text" required class="form-control" placeholder="Your Name" name="name" value={{name}}>
	</div>
	<div class="form-group">
		<label>Email</label>
			<input required type="email" class="form-control" placeholder="Your Email" name="email" value={{email}}>
	</div>
	<div class="form-group">
		<label>Message</label>
		<div>
			<textarea required class="form-control" rows="3" name="message">{{message}}</textarea>
		</div>
	</div>
	<div class="form-group">
		<div>
			<button type="submit" class="btn btn-lg  btn-success btn-block">Submit</button>
		</div>
	</div>
</form>


